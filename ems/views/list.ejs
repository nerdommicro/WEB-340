<%- include('header') %>
<%- include('navbar') %>

<div role="main" class="container">

    <br/><br/>


    <% if (employees.length) { %>
      <h2>Employee List</h2>
      <br>
      <a href="/new">Add New</a>
      <table class="table table‐hover">
          <thead class="thead‐dark">
          <tr>
              <th>First Name</th>
              <th>Last Name</th>
              <th>ID</th>
          </tr>
          </thead>
          <tbody>
          <% employees.forEach(function (entry) { %>
          <tr>
              <td><%= entry.firstName %></td>
              <td><%= entry.lastName %></td>
              <td><%= entry.id %></td>
              <td><a href="/view/<%= entry.id %>">View</a></td>
          </tr>
          </tbody>
          <% }) %>
      </table>
      <% } else { %>
      No entries! <a href="/new">Add one!</a>
      <% } %>

</div>

<%- include('footer') %>
